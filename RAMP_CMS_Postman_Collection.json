									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.data && jsonData.data.token) {",
									"        pm.collectionVariables.set('jwtToken', jsonData.data.token);",
									"        console.log('Token saved:', jsonData.data.token);",
